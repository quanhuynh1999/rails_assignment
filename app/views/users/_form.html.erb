<div class="container mt-5">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
      <%= f.label :first_name, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: "form-control", placeholder: "Your first name", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Your last name", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control", placeholder: "Your email", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Your password", autofocus: true %>
      </div>
    </div>
    <div class="form-group row d-flex justify-content-center">
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>