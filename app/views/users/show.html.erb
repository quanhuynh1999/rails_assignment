<h1 class="text-center">Welcome to <%= @user.first_name %> <%= @user.last_name %> page</h1>
<div class="row justify-content-center">
  <div class="col-md-4 text-center">
    <%= gravatar_for @user %>
  </div>
</div>

<h3 class="text-center mt-5"><%= @user.first_name + " " + @user.last_name %> activity</h3>
<%= render "activities/activity", obj: @user.activities %>
<div class="d-flex justify-content-center">
  <%= will_paginate @user_activities %>
</div>
