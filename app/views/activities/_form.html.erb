<div class="container mt-5">
  <%= form_for(@activity, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
      <%= f.label :message, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :message, class: "form-control", placeholder: "Your message", autofocus: true %>
      </div>
    </div>
    <div class="form-group row d-flex justify-content-center">
      <%= f.submit "Create Post", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>